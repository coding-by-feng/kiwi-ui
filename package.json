{
  "name": "kiwi-vocabulary-desktop",
  "version": "0.1.0",
  "description": "Kiwi Vocabulary Learning Desktop Application",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --verbose",
    "build": "vue-cli-service build --verbose",
    "lint": "vue-cli-service lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run serve\" \"wait-on http://localhost:8080 && electron .\"",
    "electron-prod": "cross-env NODE_ENV=production electron .",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-linux": "npm run build && electron-builder --linux",
    "dist-all": "npm run build && electron-builder --mac --win --linux",
    "generate-icons": "node scripts/generate-icons.js",
    "build-electron": "node scripts/build-electron.js",
    "build-electron-mac": "node scripts/build-electron.js mac",
    "build-electron-win": "node scripts/build-electron.js win",
    "build-electron-all": "node scripts/build-electron.js all",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist dist_electron node_modules/.cache",
    "rebuild": "npm run clean && npm install"
  },
  "build": {
    "appId": "com.kiwivocabulary.desktop",
    "productName": "Kiwi Vocabulary",
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "publisherName": "Kiwi Vocabulary"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "kiwi-vocabulary",
      "private": false
    }
  },
  "dependencies": {
    "@smallwei/avue": "^2.13.2",
    "axios": "^0.19.2",
    "core-js": "^3.1.2",
    "crypto-js": "^4.2.0",
    "electron-updater": "^5.3.0",
    "element-ui": "^2.15.14",
    "howler": "^2.2.4",
    "jquery": "^3.7.1",
    "js-base64": "^3.7.7",
    "markdown-it": "^14.1.0",
    "nosleep.js": "^0.12.0",
    "nprogress": "^0.2.0",
    "vue": "^2.7.16",
    "vue-axios": "^2.1.5",
    "vue-router": "^3.6.5",
    "vue-touch": "^2.0.0-beta.4",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@vue/babel-preset-app": "^4.5.19",
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "compression-webpack-plugin": "^3.1.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.81.0",
    "sass-loader": "^8.0.2",
    "sharp": "^0.32.6",
    "sharp-ico": "^0.1.5",
    "vue-template-compiler": "^2.7.16",
    "wait-on": "^7.0.1",
    "webpack-cli": "^3.3.12"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
